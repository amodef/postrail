{% if flash.getMessage('error') %}
    <blockquote>
        <strong>Holy guacamole!</strong> {{ flash.getMessage('error')[0] }}
    </blockquote>
{% elseif flash.getMessage('success') %}    
    <blockquote>
        <strong>Wonderfull!</strong> {{ flash.getMessage('success')[0] }}
    </blockquote>
{% endif %}