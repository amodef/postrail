{% extends 'layout.twig' %}

{% set title = 'All runners' %}
{% block title %}{{title}}{% endblock %}

{% block content %}
<h1>{{title}}</h1>

<p><a class="btn btn-primary" href="{{ path_for('runner.create') }}" role="button"><span class="glyphicon glyphicon-plus"></span> Register</a></p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>#</th><th>Name</th><th>Race</th>
        </tr>
    </thead>
    <tbody>
        {% for runner in runners %}
        <tr>
            <td>{{ runner.id }}</td><td>{{ runner.first_name }} {{ runner.last_name }}</td><td>{{ runner.race }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}